<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView
        android:id="@+id/editTextText"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:background="#3677AA"
        android:backgroundTint="#3677AA"
        android:ems="10"
        android:gravity="center"
        android:inputType="text"
        android:text="Register"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/reg_email"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:drawableStart="@drawable/baseline_email_24"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Your Email"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="6dp"
        android:textColorHighlight="#000000"
        android:textColorHint="#5A5555"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/reg_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:drawableStart="@drawable/baseline_person_24"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Your Name"
        android:inputType="text"
        android:minHeight="48dp"
        android:padding="6dp"
        android:textColorHighlight="#000000"
        android:textColorHint="#5A5555"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/reg_phone"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:drawableStart="@drawable/baseline_phone_24"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Your Phone"
        android:inputType="phone"
        android:minHeight="48dp"
        android:padding="6dp"
        android:textColorHighlight="#000000"
        android:textColorHint="#5A5555"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/reg_id"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:drawableStart="@drawable/baseline_person_24"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Your National Id"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="6dp"
        android:textColorHighlight="#000000"
        android:textColorHint="#5A5555"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/reg_pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:drawableStart="@drawable/baseline_lock_24"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Enter Your Password"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="6dp"
        android:textColorHighlight="#000000"
        android:textColorHint="#5A5555"
        android:textSize="16sp" />
    <EditText
        android:id="@+id/reg_confirm_pass"
        android:layout_width="match_parent"
        android:layout_height="60dp"

        android:drawableStart="@drawable/baseline_lock_24"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="Confirm your password"
        android:inputType="textEmailAddress"
        android:minHeight="48dp"
        android:padding="6dp"
        android:textColorHighlight="#000000"
        android:textColorHint="#5A5555"
        android:textSize="16sp" />
    <Button
        android:id="@+id/reg_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/reg_confirm_pass"
        android:backgroundTint="#3677AA"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:text="Register" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:text="Already have account?"
            android:textSize="18sp" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/reg_to_log"
            android:layout_marginTop="8dp"
            android:textSize="18sp"
            android:text="Login"
            android:textColor="#3677AA"/>
    </LinearLayout>

</LinearLayout>